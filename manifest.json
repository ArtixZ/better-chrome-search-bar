{
    "manifest_version": 3,
    "name": "Better Chrome Search Bar",
    "version": "1.0",
    "description": "Enhanced find-in-page functionality with regex, case matching, and whole word matching",
    "permissions": ["activeTab", "commands", "scripting", "storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "toggle-find": {
            "suggested_key": {
                "default": "Ctrl+F",
                "mac": "Command+F"
            },
            "description": "Toggle enhanced find (Tip: Configure to Cmd+F in chrome://extensions/shortcuts)"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}
